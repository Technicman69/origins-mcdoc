struct EntityAction {
	type: #[id] #[dispatcher_key="origins:entity_action"] string,
	...origins:entity_action[[type]],
}

dispatch origins:entity_action["origins:damage", "apoli:damage"] to Damage type Damage = (
	struct {
		amount: float,
		damage_type: (#[id="damage_type"] string | string),
	} |
	struct {
		modifier: AttributeModifier,
		damage_type: (#[id="damage_type"] string | string),
	} |
	struct {
		modifiers: [AttributeModifier],
		damage_type: (#[id="damage_type"] string | string),
	} |
)

// Examples:

// No error
{
	"type": "apoli:damage",
	"damage_type": "generic",
	"amount": 1
}

// No error
{
	"type": "apoli:damage",
	"damage_type": "generic",
	"modifier": { // With no amount field default value is max health of the entity
		"operation": "multiply_total",
		"amount": -0.5 // Deal damage euqal to entity's 50% of max health
	}
}

// Error, either "amount", "modifier" or "mdifiers" should be defined
{
	"type": "apoli:damage",
	"damage_type": "generic"
}